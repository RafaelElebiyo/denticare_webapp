{% extends 'base.html.twig' %}

{% block title %}Nos Cliniques{% endblock %}

{% block body %}
  <!-- Hero Start -->
  <div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Nos Cliniques</h1>
            <a href="{{path('app_index')}}" class="h4 text-white">Accueil</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="{{path('app_cliniques')}}" class="h4 text-white">Nos Cliniques</a>
        </div>
    </div>
</div>
<!-- Hero End -->


<!-- Service Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-12">
                <div class="row g-5">
                    {% for clinique in cliniques %}
                        <div class="col-md-4 service-item wow zoomIn" data-wow-delay="0.3s">
                            <a href="{{ path('app_clinique', {'ref': clinique.ref}) }}">
                                <div class="rounded-top overflow-hidden">
                                    <img class="img-fluid" src="{{ asset('assets/img/cliniques/' ~ clinique.image) }}" alt="">
                                </div>
                                <div class="position-relative bg-light rounded-bottom text-center p-4">
                                    <h5 class="m-0">{{ clinique.name }}</h5>
                                </div>
                            </a> 
                        </div>
                    {% endfor %}
                </div>    
            </div>   
        </div>
    </div>
</div>
<!-- Service End -->

{% endblock %}
