{% extends 'base.html.twig' %}

{% block title %}{{service}}{% endblock %}

{% block body %}
  <!-- Hero Start -->
  <div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">{{service}}</h1>
            <a href="{{path('app_index')}}" class="h4 text-white">Accueil</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="{{path('app_services')}}" class="h4 text-white">Nos cliniques</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="{{path('app_service',{'ref': ref})}}" class="h4 text-white">{{service}}</a>
        </div>
    </div>
</div>
<!-- Hero End -->


<!-- Service Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-5 mb-5">
            <div class="col-lg-5 wow zoomIn" data-wow-delay="0.3s" style="min-height: 400px;">
                <img class="img-fluid" src="{{asset('assets/img/services/' ~ ref ~ '.jpg')}}" alt="">
                <a href="{{path('nouveau_rendezvous')}}" class="btn btn-primary py-3 px-5 mt-4 wow zoomIn" data-wow-delay="0.6s">Prendre un rendez-vous</a>
            </div>
            <div class="col-lg-7">
                <div class="section-title mb-5">
                    <h5 class="position-relative d-inline-block text-primary text-uppercase">{{service}}</h5>
                    <h4 class="display-5 mb-0">Nous offrons des services dentaires de la meilleure qualit√©</h4>
                </div>
                <div class="row g-5">
                  <p  style="font: size 24px; ; color:rgba(9, 30, 62, .7);">{{phrase}}</p>  
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->

{% endblock %}
